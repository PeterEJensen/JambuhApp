<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="com.example.peterpc.jambuhapp.RegistrationActivity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:drawableLeft="@drawable/baseline_email_white_24dp"
            android:drawableStart="@drawable/baseline_email_white_24dp"
            android:ems="10"
            android:hint="Email.."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="#FFF"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="22dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_lock_white_24dp"
            android:drawableStart="@drawable/baseline_lock_white_24dp"
            android:drawablePadding="12dp"
            android:maxLines="1"
            android:ems="10"
            android:hint="Password.."
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#FFF"/>



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/stortejst" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/background_login_button"
            android:text="Log ind"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_login_button"
            android:text="Registrer"
            android:textColor="@color/colorPrimary" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="@string/forget_password"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>